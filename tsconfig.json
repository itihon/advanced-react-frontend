{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
    ],
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "files": [
    "src/index.tsx",
    "src/globals.d.ts",
  ],
}

