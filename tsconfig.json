{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src", "app/types/globals.d.ts"],
}

